<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietSanPham"
    android:layout_margin="8dp">
    <RelativeLayout
        android:id="@+id/btn_tha_tym"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:gravity="bottom"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_favorite_24"
            />
        <ImageView
            android:id="@+id/img_tymbay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_favorite_24"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_below="@id/btn_tha_tym"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >
            <ImageView
                android:id="@+id/img_sanpham"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img2"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten san pham"
                android:id="@+id/tv_ten_sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="................................
.............................
...............................................
...............................................
......................................
............................"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gia"
                android:text="Gia: 10$"
                android:textStyle="bold"
                android:textColor="#00BCD4"/>

            <TextView
                android:id="@+id/tv_loaips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loaisp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lượt bán: 10"
                android:textStyle="bold"
                android:id="@+id/tv_luotban"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                >
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/img_start4"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/img_start5"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_star"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Đánh giá từ khách hàng"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyrcleDanhGia"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="20dp"
                android:layout_below="@id/recyrcleDanhGia">
                <EditText
                    android:id="@+id/ed_comment"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:hint="đánh giá của bạn...."/>
                <Button
                    android:id="@+id/btn_comment"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="cmt"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/img_1"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="201dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logoo" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_ed_username"
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:hint="Name"
       android:gravity="center"
        app:startIconDrawable="@drawable/custom_name_focus">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_username"
            android:layout_width="302dp"
            android:layout_height="60dp"
             android:background="@drawable/custom_input"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:id="@+id/til_ed_password"
        app:passwordToggleEnabled="true"
        android:hint="Password"
        android:gravity="center"
        app:startIconDrawable="@drawable/custom_pass">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_password"
            android:layout_width="302dp"
            android:layout_height="60dp"
            app:passwordToggleEnabled="true"
            android:background="@drawable/custom_input"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#181818"
        android:text="Log in"
        android:id="@+id/btn_login"
        android:textColor="@color/white" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#181818"
        android:text="Sign up"
        android:id="@+id/btn_dangky"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="or Log in with" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/loginWithGoogle"
            android:layout_width="53dp"
            android:layout_height="62dp"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/loginWithFacebook"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:src="@drawable/gg" />

        <ImageView
            android:id="@+id/loginWithApple"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:src="@drawable/apple" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_sp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/img1" />

    <ImageView
        android:id="@+id/btn_upload"
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/up_file"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="374dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/backgfround_them_loaii"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Thêm Loại"
            android:textColor="#8b4513"
            android:textSize="40dp"
            android:textStyle="bold|italic" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ed_ma_loai"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Mã loại"
            android:gravity="center"
            app:startIconDrawable="@drawable/custom_pass">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_maloai"
                android:layout_width="302dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_input"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_ed_tenloai"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Tên Loại"
            android:gravity="center"
            app:startIconDrawable="@drawable/custom_name_focus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_tenloai"
                android:layout_width="302dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_input"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_loai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:backgroundTint="#181818"
                android:text="Thêm Loại" />

            <Button
                android:id="@+id/btn_xoa_trang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8b4513"
                android:text="Xoá trắng" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>